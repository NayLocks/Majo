{% extends 'base.html.twig' %}

{% block title %}Entraînement : {{ video.dateTraining|date('d-m-Y') }}{% endblock %}

{% block body %}
<div class="row">
  <div class="col l12">
    <div class="row">
      <div class="col l8 s12">
        <h2>Vidéo du : {{ video.dateTraining|date('d-m-Y') }}</h2>

        <video controls width="100%">
          <source src="{{ asset('videos/' ~ video.dateTraining|date('Y_m_d') ~ '.mp4') }}" type="video/mp4">
          Désolé, votre navigateur ne supporte pas cette vidéo.
        </video>
      </div>
    </div>
  </div>
</div>
{% endblock %}
