{% extends 'base.html.twig' %}

{% block title %}Liste Entraînements{% endblock %}

{% block body %}
   <div class="col s12">
       <span class="title">Liste des vidéos des Entraînements</span>
   </div>
            {% for video in videos %}
              <div class="col s12 m6 l4">
                <div class="card">
                  <div class="card-image waves-effect waves-block waves-light">
                    <a href="{{ path('video', { 'id': video.id }) }}">
                      <img width="305" height="229" src="{{ asset('background_items.jpg') }}" sizes="(max-width: 305px) 100vw, 305px">    <span class="card-title home" style="color : black;">{{ video.dateTraining|date('d/m/Y') }}</span>
                      </a>
                  </div>
                </div>
              </div>
            {% endfor %}
{% endblock %}
